[credential]
  helper = osxkeychain
[user]
  name = Ireton, Doug
  email = doug.ireton@nordstrom.com
[core]
  excludesfile = ~/.gitignore_global

  ; From here: https://coderwall.com/p/nl-bdg
  pager = $(brew --prefix git)/share/git-core/contrib/diff-highlight/diff-highlight | less

[merge]
  tool = vimdiff

[mergetool]
  prompt = false
  keepBackup = false

[diff]
  tool = vimdiff
  mnemonicprefix = true
  renames = copies

[difftool]
  prompt = false

[color]
  ui = true
[alias]
  sync = !git pull --rebase && git push
  lol = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  l = log --format=format:'%C(auto) %h %Creset %<|(70,trunc) %s %C(green) %an %Creset %ar %C(auto) %d' --graph
  la = l --all
  ln = l --no-merges
  lol2 = log --graph --decorate --pretty=oneline --abbrev-commit --all
  unstage = reset HEAD --	
  st = status
  co = checkout
  br = branch
  ci = commit
	create-pull-request = !sh -c 'stash pull-request $0'
[init]
  templatedir = ~/.git_template
[push]
  default = current
